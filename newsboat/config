# misc
auto-reload yes
html-renderer "w3m -dump -T text/html"
browser "open %u"

# theme
include ~/.config/newsboat/dark

# ui
highlight article "(^Feed:|^Title:|^Author:|^Link:|^Date:|^Podcast Download URL:)"    red default

 # keybinding
#
bind-key r down
bind-key t up
bind-key r next articlelist
bind-key t prev articlelist
bind-key R next-feed articlelist
bind-key T prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key i open
bind-key l quit
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key D pb-download
bind-key U show-urls
bind-key x pb-delete
bind-key ^R reload
